<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <style>
        #my-blogs {
        display: flex;
        flex-wrap: wrap;
        margin-left: 4vw;
    }
    </style>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <% if (myBlogs.length == 0) { %>
     <h1 class="text-center mt-3">Looks like u have not posted any thing yet</h1>
    <% } %>
    <div id = "my-blogs">
        <% myBlogs.forEach(blog => { %>
            <div class="card mt-3 ms-3" style="width: 26rem;">
                <img src="<%= blog.image %>" class="card-img-top" alt="image" width="100" height=250">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.body.substr(0, 50) %>....</p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read the blog</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('./partials/scripts.ejs') %>
</html>